{
    "manifest_version": 3,
    "name": "Crumble",
    "version": "1.0.0",
    "description": "Inspect, edit, export, and manage browser cookies, localStorage, and sessionStorage from the Chrome Side Panel.",
    "minimum_chrome_version": "114",
    "permissions": [
        "cookies",
        "tabs",
        "activeTab",
        "storage",
        "scripting",
        "sidePanel",
        "downloads"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_title": "Open Crumble",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "src/background.ts"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/content-script.ts"
            ],
            "run_at": "document_idle"
        }
    ],
    "side_panel": {
        "default_path": "index.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}